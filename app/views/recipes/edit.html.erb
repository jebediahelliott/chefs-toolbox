<% if @recipe.errors.any? %>
  <div id="error_explanation">
    <h2>
      Please fill in all required fields.
    </h2>

    <ul>
    <% @recipe.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    <% ingredient_errors(@recipe).each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= render partial: "form", locals: {recipe: @recipe} %>
