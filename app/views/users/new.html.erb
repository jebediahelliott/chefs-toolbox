<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      Please fill in all required fields.
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= render partial: "form", locals: { user: @user } %>
