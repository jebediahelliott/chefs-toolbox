<h1><%= @user.name %></h1>
<%= form_tag user_recipes_path(@user), method: "get" do %>
  Search by Ingredient <%= text_field_tag :item %>
  <%= submit_tag "Search" %>
<% end %>
<h3>Recipes</h3>
<% @user.recipes.each do |recipe| %>
  <p><%= link_to recipe.name, user_recipe_path(@user, recipe) %></p>
<% end %>
<h3>Menus</h3>
<% @user.menus.each do |menu| %>
  <p><%= link_to menu.menu_date, user_menu_path(@user, menu) %></p>
<% end %>
